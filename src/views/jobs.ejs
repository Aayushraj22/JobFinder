<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jobs</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
</head>
<body class="container">
    <h2>Jobs page</h2>
    <section class="row border mt-4 p-2">
        <% if (jobs) { %>
            <% jobs.forEach(job => { %>
            <div class="border col-4 d-flex flex-column p-2 gap-1 rounded">
                <p class="m-0"> Company : <%= job.companyName %> </p>
                <p class="m-0"> Role : <%= job.jobDesignation %> </p>
                <!-- <p> Type : <%= job.jobType %> </p> -->
                <!-- <p class="h-fit border "> Skills Required : <% job.skills.forEach(skill => { %>
                    <span class="border bg-secondary text-white px-2 py-1 rounded "><%= skill %></span>
                    <% }) %> </p> -->
                <!-- <p class="text-primary"> Paying: <%= job.salary %> </p>
                <p class="text-danger"> Openings: <%= job.opening %> </p> -->
                <p class="text-danger"> Apply Before : <%= job.applyBy %> </p>
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="redirectToDestination(window.location.href, undefined, '<%= job.jobId %>')">View In Detail</button>
            </div>
            <% }) %>
        <% } %>
    </section>

    <script type="module">
        import {redirectToDestination} from '/utility.js'
        window.redirectToDestination = redirectToDestination
    </script>
</body>
</html>