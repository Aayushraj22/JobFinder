<div
  class="flex-grow-1 w-100
  overflow-y-auto p-4 h-100"
>
  <h2 class="text-center">Applicant Detail</h2>
  <% if (applicant) { %>
  <main
    class="d-flex flex-column w-100 mt-4 align-items-start fs-6 container gap-3"
    style="height: calc(100dvh - 110px)"
  >
    <section class="container py-4">
      <p class="card-title mb-0">
        Name :
        <span class="text-secondary text-capitalize" id="applicantName"
          ><%= applicant.fullName %></span
        >
      </p>
      <p class="card-title mb-0">
        Email :
        <span class="text-secondary" id="applicantEmail"
          ><%= applicant.email %></span
        >
      </p>
      <p class="card-title mb-0">
        Contact :
        <span class="text-secondary" id="applicantContact"
          ><%= applicant.contact %></span
        >
      </p>
      <a class="fs-6 text-primary" href="<%= applicant.resumePath %>"
        >view Resume</a
      >
    </section>

    <section class="d-flex gap-3">
      <button type="button" class="btn btn-warning" onclick="openEditForm()">
        Edit
      </button>
      <button
        type="button"
        class="btn btn-danger"
        data-bs-toggle="modal"
        data-bs-target="#staticBackdrop"
        onclick="deleteAlertInModal()"
      >
        Delete
      </button>
    </section>

    <div
      id="editForm"
      class="container border w-100 flex-grow-1 overflow-auto mx-auto d-none rounded p-2 px-4"
    >
      <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <input
          name="fullName"
          type="text"
          class="form-control"
          id="name"
          aria-describedby="name"
          value="<%= applicant.fullName %>"
        />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          type="email"
          class="form-control"
          id="email"
          aria-describedby="email"
          value="<%= applicant.email %>"
        />
      </div>
      <div class="mb-3">
        <label for="contact" class="form-label">Contact</label>
        <input
          name="contact"
          type="tel"
          class="form-control"
          id="contact"
          aria-describedby="contact"
          value="<%= applicant.contact %>"
        />
      </div>
      <button
        type="button"
        class="btn btn-success"
        data-bs-toggle="modal"
        data-bs-target="#staticBackdrop"
        onclick="updateModalWithUpdatedFieldValues()"
      >
        Update
      </button>
      <button type="button" class="btn btn-dark" onclick="closeEditForm()">
        Cancel
      </button>
    </div>
  </main>
  <div
    class="modal fade bg-dark text-dark"
    id="staticBackdrop"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
    tabindex="-1"
    aria-labelledby="staticBackdropLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="staticBackdropLabel"></h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body"></div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-outline-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            type="button"
            class="btn btn-outline-primary"
            data-bs-dismiss="modal"
          >
            Confirm
          </button>
        </div>
      </div>
    </div>
  </div>
  <% } else { %>
  <div class="alert alert-info" role="alert">Successfully Deleted</div>
  <% } %>
</div>
